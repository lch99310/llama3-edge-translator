{
    "manifest_version": 2,
    "name": "Groq Chinese Translator",
    "version": "1.0",
    "description": "Translate web pages to Chinese using Groq API",
    "permissions": [
      "activeTab",
      "storage",
      "https://api.groq.com/"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }